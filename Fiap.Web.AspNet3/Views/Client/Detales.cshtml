@model ClientModel;

@{
    /*asp for carrega para a gente automatico as propriedades
     * value
     * required se s
     * todas anotations existentes
    * entre outras
    */
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhes </h2>


                <input asp-for="ClientId" name="ClientId" />

                <div class="form-group">
                    <label class="control-label">Nome</label>
                    <input readonly class="form-control col-5" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input readonly class="form-control col-5" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label class="control-label">Data Nascimento</label>
                    <input readonly class="form-control col-5" asp-for="Birth" />
                </div>
                <div class="form-group">
                    <label class="control-label">Observação</label>
                    <textarea readonly class="form-control" asp-for="Observation"></textarea>
                </div>

                <div class="form-group">
                    <label class="control-label">Nome Representante</label>
                    <input readonly class="form-control col-5" asp-for="@Model.Representante.NomeRepresentante" />
                </div>

                <a class="btn btn-warning btn-sm" asp-controller="Client" asp-action="Index">Inicio</a>

                


            </div>
        </div>
    </div>
</div>